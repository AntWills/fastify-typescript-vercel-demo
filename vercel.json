{
  "version": 2,
  "builds": [
    {
      "src": "src/serverless.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "dist/serverless.js"
    }
  ],
  "installCommand": "yarn install --production",
  "buildCommand": "yarn run build"
}